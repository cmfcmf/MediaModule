<fieldset>
    <legend>{{ __('License') }}</legend>
    <select class="form-control" title="{{ __('Select license') }}" name="cmfcmfmediamodule[license][]" multiple>
        <option value="">{{ __('Unknown') }}</option>
        {% for license in preferredLicenses %}
            <option value="{{ license.id|e('html_attr') }}"{% if license.id in selectedLicenses %} selected{% endif %}>
                {{ license.title }}
            </option>
        {% endfor %}
        <option disabled>--------------------</option>
        {% for license in outdatedLicenses %}
            <option value="{{ license.id|e('html_attr') }}"{% if license.id in selectedLicenses %} selected{% endif %}>
                {{ license.title }}
            </option>
        {% endfor %}
    </select>
</fieldset>
