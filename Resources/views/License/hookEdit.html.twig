<fieldset>
    <legend>{% trans %}License{% endtrans %}</legend>
    <select class="form-control" title="{% trans %}Select license{% endtrans %}" name="cmfcmfmediamodule[license][]" multiple>
        <option value="">{% trans %}Unknown{% endtrans %}</option>
        {% for license in preferredLicenses %}
            <option value="{{ license.id|e('html_attr') }}"{% if license.id in selectedLicenses %} selected="selected"{% endif %}>
                {{ license.title }}
            </option>
        {% endfor %}
        <option disabled="disabled">--------------------</option>
        {% for license in outdatedLicenses %}
            <option value="{{ license.id|e('html_attr') }}"{% if license.id in selectedLicenses %} selected="selected"{% endif %}>
                {{ license.title }}
            </option>
        {% endfor %}
    </select>
</fieldset>
