{% extends 'CmfcmfMediaModule::base.html.twig' %}
{% block title %}
    {{ __('Watermarks') }}
{% endblock %}
{% block content %}
    {% if cmfcmfmediamodule_hasPermission('watermark', 'new') %}
        <a href="{{ path('cmfcmfmediamodule_watermark_new', {type: 'image'}) }}" class="btn btn-default">
            <i class="fa fa-fw fa-picture-o"></i>
            {{ __('Create a new image-based watermark') }}
        </a>
        <a href="{{ path('cmfcmfmediamodule_watermark_new', {type: 'text'}) }}" class="btn btn-default">
            <i class="fa fa-fw fa-font"></i>
            {{ __('Create a new text-based watermark') }}
        </a>
        <br />
        <br />
    {% endif %}

    <div class="table-responsive">
        <table class="table table-condensed table-striped table-hover">
            <colgroup>
                <col id="cId" />
                <col id="cTitle" />
                <col id="cContent" />
                <col id="cPosition" />
                <col id="cImageSize" />
                <col id="cRelativeSize" />
                <col id="cActions" />
            </colgroup>
            <thead>
                <tr>
                    <th id="hId" scope="col">{{ __('ID') }}</th>
                    <th id="hTitle" scope="col">{{ __('Title') }}</th>
                    <th id="hContent" scope="col">{{ __('Content') }}</th>
                    <th id="hPosition" scope="col">{{ __('Position') }}</th>
                    <th id="hImageSize" scope="col">{{ __('Image size') }}</th>
                    <th id="hRelativeSize" scope="col">{{ __('Relative size') }}</th>
                    <th id="hActions" scope="col">{{ __('Actions') }}</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td headers="hId">{{ entity.id }}</td>
                    <th id="hEntity{{ entity.id }}" scope="row" headers="hTitle">{{ entity.title }}</th>
                    <td headers="hEntity{{ entity.id }} hContent">{{ entity.viewTableContent|raw }}</td>
                    <td headers="hEntity{{ entity.id }} hPosition">{{ entity.positionX }} x {{ entity.positionY }}</td>
                    <td headers="hEntity{{ entity.id }} hImageSize">{{ entity.minSizeX }} x {{ entity.minSizeY }}</td>
                    <td headers="hEntity{{ entity.id }} hRelativeSize">
                        {% if entity.relativeSize is not null %}
                            {{ entity.relativeSize }} %
                        {% endif %}
                    </td>
                    <td headers="hEntity{{ entity.id }} hActions" class="text-right">
                        {% if cmfcmfmediamodule_hasPermission(entity, 'edit') %}
                            <a href="{{ path('cmfcmfmediamodule_watermark_edit', {id: entity.id}) }}">
                                <i class="fa fa-edit fa-fw"></i>
                            </a>
                        {% endif %}
                        {% if cmfcmfmediamodule_hasPermission(entity, 'delete') %}
                            <a href="{{ path('cmfcmfmediamodule_watermark_delete', {id: entity.id}) }}" class="text-danger">
                                <i class="fa fa-trash-o fa-fw"></i>
                            </a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">
                        {{ __('No watermarks created yet.') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
