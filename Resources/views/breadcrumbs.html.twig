<ol class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item{% if loop.last %} active{% endif %}">
            {% if breadcrumb.url %}
                <a href="{{ breadcrumb.url }}">
            {% endif %}
                {{ breadcrumb.title }}
            {% if breadcrumb.url %}
                </a>
            {% endif %}
        </li>
    {% endfor %}
</ol>
