{% extends '@CmfcmfMediaModule/base.html.twig' %}
{% block title %}
    {{ entity.title }}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div class="alert alert-danger">
                {% trans %}Do you really want to delete this media object?{% endtrans %}
            </div>
            <div class="col-sm-offset-2 col-sm-10 col-xs-12">
                <form action="{{ path('cmfcmfmediamodule_media_delete', {slug: entity.slug, collectionSlug: entity.collection.slug}) }}" method="post">
                    <button type="submit" class="btn btn-danger">
                        {% trans %}Delete{% endtrans %}
                    </button>
                    <a href="{{ path('cmfcmfmediamodule_media_display', {slug: entity.slug, collectionSlug: entity.collection.slug}) }}" class="btn btn-default">
                        {% trans %}Cancel{% endtrans %}
                    </a>
                </form>
            </div>
            {{ hook|raw }}
        </div>
    </div>
{% endblock %}
