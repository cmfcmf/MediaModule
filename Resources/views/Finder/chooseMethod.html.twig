                <p class="list-group-item-text">{% trans %}and embed it{% endtrans %}</p>
                <div class="clearfix"></div>
            </a>
            <a href="{{ path('cmfcmfmediamodule_finder_popupchoosecollections') }}" class="list-group-item">
                <i class="fa fa-list fa-5x pull-left"></i>
