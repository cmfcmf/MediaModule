<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="list-group">
            <a href="{{ path('cmfcmfmediamodule_media_new', {popup: true}) }}" class="list-group-item">
                <i class="fa fa-upload fa-5x pull-left"></i>
