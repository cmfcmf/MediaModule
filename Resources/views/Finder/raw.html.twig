{% include '@CmfcmfMediaModule/util.html.twig' %}
{{ pageAddAsset('javascript', zasset('@CmfcmfMediaModule:js/Finder/base.js')) }}
<div class="row">
    <div class="col-xs-12">
        <div class="input-group">
            <input class="form-control" placeholder="{% trans %}Insert search text{% endtrans %}" id="cmfcmfmedia-finder-search-input" />
            <span class="input-group-addon"><i class="fa fa-cog fa-spin hidden"></i></span>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-condensed">
                <colgroup>
                    <col id="cType" />
                    <col id="cTitle" />
                    <col id="cPreview" />
                    <col id="cLicense" />
                    <col id="cUrl" />
                    <col id="cActions" />
                </colgroup>
                <thead>
                    <tr>
                        <th id="hType" scope="col">{% trans %}Type{% endtrans %}</th>
                        <th id="hTitle" scope="col">{% trans %}Title{% endtrans %}</th>
                        <th id="hPreview" scope="col">{% trans %}Preview{% endtrans %}</th>
                        <th id="hLicense" scope="col">{% trans %}License{% endtrans %}</th>
                        <th id="hUrl" scope="col">{% trans %}Url{% endtrans %}</th>
                        <th id="hActions" scope="col"></th>
                    </tr>
                </thead>
                <tbody id="cmfcmfmedia-finder-table-body"></tbody>
            </table>
        </div>
    </div>
</div>
