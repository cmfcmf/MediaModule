{% if hookedObjectCollections is not empty %}
    <h3>{% trans %}Media collections{% endtrans %}</h3>
    {% for hookedObjectCollection in hookedObjectCollections %}
        <h4>{{ hookedObjectCollection.collection.title }}</h4>
        {{ render(controller('Cmfcmf\\Module\\MediaModule\\Controller\\CollectionController::displayAction', {slug: hookedObjectCollection.collection.slug}, {isHook: true})) }}
    {% endfor %}
{% endif %}
