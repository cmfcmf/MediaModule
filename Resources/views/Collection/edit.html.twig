{% extends '@CmfcmfMediaModule/base.html.twig' %}
{% block title 'Create or edit collection'|trans %}
{% block content %}
    {% include '@CmfcmfMediaModule/util.html.twig' %}
    {% form_theme form '@CmfcmfMediaModule/Form/bootstrap_4.html.twig' %}
    {{ form_start(form) }}
        <fieldset>
            <legend>{% trans %}Content{% endtrans %}</legend>
            {{ form_widget(form) }}
            {{ hook|raw }}
            {% if formHookTemplates|length > 0 %}
                <fieldset>
                    {% for hookTemplate in formHookTemplates %}
                        {{ include(hookTemplate.0, hookTemplate.1, ignore_missing = true) }}
                    {% endfor %}
                </fieldset>
            {% endif %}
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-fw fa-save"></i> {% trans %}Save{% endtrans %}
                </button>
                <a href="{{ path('cmfcmfmediamodule_collection_displayroot') }}" class="btn btn-secondary">
                    <i class="fas fa-fw fa-ban"></i> {% trans %}Cancel{% endtrans %}
                </a>
            </div>
        </fieldset>
    {{ form_end(form) }}
{% endblock %}
